<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
 
	<RelativeLayout
	    android:id="@+id/bubleEvent"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="5dp"
	    android:layout_marginLeft="5dp"
	    android:background="@drawable/bubble_image_big_left"
	    android:onClick="handleBubleEvent"
	    android:orientation="vertical" >
		
	    <HorizontalScrollView
	        android:id="@+id/scrollView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="30dp"
	        android:fillViewport="true"
	        android:isScrollContainer="true" >
		    
		    <LinearLayout
		        android:id="@+id/buble_header"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
				
		        <ImageButton
		        android:id="@+id/pic01"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@drawable/image_gallery"
		        android:src="@drawable/demo_pic" />
		        
		        <ImageButton
		        android:id="@+id/pic02"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@null"
		        android:src="@drawable/image_gallery" />
		        
		        <ImageButton
		        android:id="@+id/pic03"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@null"
		        android:src="@drawable/image_gallery" />
		        
		        <ImageButton
		        android:id="@+id/pic04"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@null"
		        android:src="@drawable/image_gallery" />
		        
		        <ImageButton
		        android:id="@+id/pic05"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@null"
		        android:src="@drawable/image_gallery" />
		        
		        <ImageButton
		        android:id="@+id/pic06"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@null"
		        android:src="@drawable/image_gallery" />
		        
		        <ImageButton
		        android:id="@+id/pic07"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_margin="5dp"
		        android:background="@null"
		        android:src="@drawable/image_gallery" /> 
		        
		    </LinearLayout>

		    
		</HorizontalScrollView>

		
	</RelativeLayout>
	
	

</LinearLayout>
                