    <LinearLayout 
        android:id="@+id/header_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_centerVertical="true"
        android:gravity="left"
        android:paddingLeft="10dp" >

        <ImageButton
            android:id="@+id/menuListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:src="@drawable/list"
            android:background="@null" />
        
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/divider_header" />

	</LinearLayout>
	
    <LinearLayout
	        android:id="@+id/header_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true" >
	
	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:src="@drawable/divider_header" />
	
	        <ImageButton
	            android:id="@+id/addStoryButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:paddingRight="15dp"
	            android:src="@drawable/resto_restaurant_chinese" />
	        
	        <ImageButton
	            android:id="@+id/mapButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:paddingRight="15dp"
	            android:src="@drawable/transport_fillingstation" />
	        
	        <ImageButton
	            android:id="@+id/mapButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:paddingRight="15dp"
	            android:src="@drawable/transport_bus" />
	        
	        <ImageButton
	            android:id="@+id/mapButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:paddingRight="15dp"
	            android:src="@drawable/sport_beachvolleyball" />
	        
	        <ImageButton
	            android:id="@+id/mapButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@null"
	            android:paddingRight="15dp"
	            android:src="@drawable/health_spa" />
	        
	        
	    </LinearLayout>

    
    
    </RelativeLayout>

</LinearLayout>