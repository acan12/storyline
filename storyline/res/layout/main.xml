<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />
    
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/sliding_menutop_layout" />

    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:isScrollContainer="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_color"
            android:orientation="vertical" >
			
            <!-- <TextView android:id="@+id/info_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:text="Jakarta, 30 Jul 2013" /> -->
            
            <LinearLayout
                android:id="@+id/body_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left" >

                
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingTop="10px"
                    android:src="@drawable/start_point" />
            </LinearLayout>

            <!-- code handle:start -->
			<RelativeLayout
                android:id="@+id/body_center1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/vertical_line"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/vertical_line" />
                 
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="110dp"
                    android:src="@drawable/pointer" />
                
				<include
				    android:id="@+id/bubble_image"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_marginLeft="25dp"
			        layout="@layout/bubble_image_right"/>
				
				
                <include
                    android:id="@+id/bubble_event"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@id/bubble_image"
			        android:layout_marginLeft="20dp"
			        layout="@layout/bubble_right"/>
                
                
                
                

            </RelativeLayout>
            
			<RelativeLayout
                android:id="@+id/body_center2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/vertical_line" />
                 
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/pointer" />
                
                <include
                    android:id="@+id/bubble_event"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@id/bubble_image"
			        android:layout_marginLeft="20dp"
			        layout="@layout/bubble_right"/>
                
                
                
                

            </RelativeLayout>
 
            <!-- end -->

            <LinearLayout
                android:id="@+id/body_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/end_point" />
            </LinearLayout>
            
            <!-- <TextView android:id="@+id/info_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:text="Bandung, 05 Aug 2013" /> -->
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>