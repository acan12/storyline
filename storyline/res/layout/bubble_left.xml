<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:onClick="handleBubleEvent"
	    android:background="@drawable/bubble_small_left" >

	    
	    <LinearLayout 
	        android:id="@+id/buble_header_left"
		    android:orientation="horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >
		    
			<ImageView
			    android:id="@+id/imageClock"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:paddingLeft="15dp"
			    android:paddingTop="10dp"
			    android:src="@drawable/clock_icon" />
			
			<TextView 
			    android:id="@+id/infoClock"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_toRightOf="@+id/imageClock"
			    android:layout_margin="6dp"
			    android:text="San Fransisco USA, 10.00pm"
			    android:layout_alignParentBottom="true"
			    android:textColor="#ababab" />
			
			<ImageView
			    android:id="@+id/imageRemove"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_toRightOf="@+id/imageClock"
			    android:paddingTop="10dp"
			    android:paddingLeft="40dp"
			    
			    android:src="@drawable/delete" />
		</LinearLayout>
		
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/buble_header_left" >
		    

			<TextView
			    android:id="@+id/message"
			    android:layout_width="260dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="13dp"
			    android:gravity="center_vertical"
			    android:textColor="#000"
			    android:textSize="10px"
			    android:layout_weight="1"
				android:ellipsize="none"
				android:maxLines="20"
			    android:text="123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890" />
		    
		</LinearLayout>

	</RelativeLayout>

</LinearLayout>
                

